<div class="container custome-gap testimonial-section">
  <div class="row">
    <div class="col-md-12 col-12">
      <h1 class="title-heading mb-0">Testimonials</h1>
      <h4 class="subtext-heading text-center my-4">Over 15,000 happy customers.</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

      <div
        id="carouselExampleCaptions1"
        class="carousel slide"
        data-bs-ride="false">
        <div class="carousel-indicators">
          <button
            type="button"
            data-bs-target="#carouselExampleCaptions1"
            data-bs-slide-to="0"
            class="active"
            aria-current="true"
            aria-label="Slide 1"></button>
          <button
            type="button"
            data-bs-target="#carouselExampleCaptions1"
            data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="card my-3 testimonial-card">
              <div class="row justify-content-center">
                <div class="col-md-2">
                  <div class="testimonial-image-container">
                    <img
                      src="{{ 'test1.jpg' | asset_url }}"
                      class="img-fluid rounded-start"
                      alt="...">
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <p class="testimonial-text">“My experience with Mark is a complete
 
                        sucess, from customer service, wide range of
                        products, clean store, purchasing experience, the
                        newsletter.Thank you.”</p>
                    <p class="testimonial-name">
                      <small>Leona Paul</small>
                    </p>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="card my-3 testimonial-card">
              <div class="row justify-content-center">
                <div class="col-md-2">
                  <div class="testimonial-image-container">
                    <img
                      src="{{ 'test2.jpg' | asset_url }}"
                      class="img-fluid rounded-start"
                      alt="...">
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <p class="testimonial-text">“My experience with Mark is a complete
 
                        sucess, from customer service, wide range of
                        products, clean store, purchasing experience, the
                        newsletter.Thank you.”</p>
                    <p class="testimonial-name">
                      <small>Leona Paul</small>
                    </p>
                  </div>

                </div>
              </div>
            </div>
          </div>

        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleCaptions1"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleCaptions1"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

    </div>
  </div>
</div>


