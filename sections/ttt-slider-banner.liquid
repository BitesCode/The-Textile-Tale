
<div class="container-fluid">
    <div class="row">
      <div class="col-md-12 col-12 p-0">
        <section class="banner-slider">
          <div id="carouselExampleIndicators" class="carousel slide"
            data-bs-ride="carousel">
            <div class="carousel-indicators">
              {% for slide in section.settings.slides %}
                <button type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="{{ forloop.index0 }}"
                  {% if forloop.first %}class="active"{% endif %}
                  aria-current="{{ forloop.first }}"
                  aria-label="Slide {{ forloop.index }}"></button>
              {% endfor %}
            </div>
            <div class="carousel-inner">
              {% for slide in section.settings.slides %}
                <div class="carousel-item {% if forloop.first %}active{% endif %}">
                  <img src="{{ slide.image | img_url: 'master' }}" class="d-block w-100"
                    alt="{{ slide.alt }}">
                  <div class="carousel-caption">
                    <h5>{{ slide.title }}</h5>
                    <p>{{ slide.description }}</p>
                    <a href="{{ slide.button_link }}" class="btn btn-primary">{{ slide.button_text }}</a>
                  </div>
                </div>
              {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button"
              data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button"
              data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </section>
      </div>
    </div>
</div>

{% schema %}
{
  "name": "TTT Banner Section",
  "settings": [
    {
      "type": "group",
      "name": "Banner Slides",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Alt Text",
          "id": "alt",
          "default": "Image Alt Text"
        },
        {
          "type": "text",
          "label": "Title",
          "id": "title",
          "default": "Slide Title"
        },
        {
          "type": "textarea",
          "label": "Description",
          "id": "description",
          "default": "Slide Description"
        },
        {
          "type": "text",
          "label": "Button Text",
          "id": "button_text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "label": "Button Link",
          "id": "button_link",
          "default": "#"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ttt-header-banner"
    }
  ]
}
{% endschema %}
